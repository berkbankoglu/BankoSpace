{
  "productName": "BankoSpace",
  "version": "3.0.0",
  "identifier": "com.berkbankoglu.bankospace",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg", "app"],
    "publisher": "Berk Bankoglu",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "BankoSpace",
        "width": 1400,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "url": "index.html"
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://accounts.google.com https://*.googleapis.com https://*.firebaseapp.com https://*.firebaseio.com https://*.cloudfunctions.net; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; frame-src https://accounts.google.com https://*.firebaseapp.com",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main app capabilities",
          "windows": ["main", "timer-popup"],
          "permissions": [
            "dialog:default",
            "dialog:allow-save",
            "dialog:allow-open",
            "fs:default",
            "fs:allow-read-text-file",
            "fs:allow-write-text-file",
            "fs:allow-read-file",
            "fs:allow-read-dir",
            "notification:default",
            "core:window:allow-create",
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-unmaximize",
            "core:window:allow-is-maximized",
            "core:window:allow-is-fullscreen",
            "core:window:allow-set-fullscreen",
            "core:window:allow-set-always-on-top",
            "core:window:allow-start-dragging",
            "core:webview:allow-create-webview-window",
            "core:window:allow-destroy"
          ]
        }
      ]
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/berkbankoglu/BankoSpace/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}
